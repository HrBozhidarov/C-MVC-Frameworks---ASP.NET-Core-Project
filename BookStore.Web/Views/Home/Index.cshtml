@using X.PagedList.Mvc.Core;
@using X.PagedList.Mvc.Common;
@using X.PagedList;

@{
    ViewData["Title"] = "Home Page";
}

<partial name="_SearchPartial" />

<div id="carouselIndicators" class="carousel slide w-100" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselIndicators" data-slide-to="1"></li>
        <li data-target="#carouselIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img style="width:100%; height:350px" src="https://images.unsplash.com/photo-1542460027-46e0cc3af27a?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1228&q=80" alt="First slide">
        </div>
        <div class="carousel-item">
            <img style="width:100%; height:350px" src="https://www.highreshdwallpapers.com/wp-content/uploads/2015/02/Glowing-City-Night-1024x768.jpg" alt="First slide">

        </div>
        <div class="carousel-item">
            <img style="width:100%; height:350px" src="http://www.wallpapers13.com/wp-content/uploads/2016/01/Hongkong-city-at-night-high-quality-wallpaper-wdjaz-915x515.jpg" alt="First slide">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row mx-3 my-5">
    <div class="col-lg-12 mx-auto">
        <h3 class="index-color-slider-text">New Releases</h3>
        <hr class="hr-2 index-color-slider-bg" />
        <div id="slider-index-one" class="my-5">

        </div>
        <h3 class="index-color-slider-text">The Oldest</h3>
        <hr class="hr-2 index-color-slider-bg" />
        <div id="slider-index-two" class="my-5">

        </div>
    </div>
</div>

<script>
    var successOrder = '@Html.Raw(HttpUtility.JavaScriptStringEncode((string)TempData["successOrder"]))';
     var successRequest = '@Html.Raw(HttpUtility.JavaScriptStringEncode((string)TempData["successQuestion"]))';

    if (successOrder!="") {
        swal("Successful order!", "You made a successful order, thank you for the great choice!", "success");
    }
    if (successRequest != "") {
        swal("Successful Request!", `${successRequest}`, "success");
    }
</script>
<script src="~/js/setting-slick.js"></script>