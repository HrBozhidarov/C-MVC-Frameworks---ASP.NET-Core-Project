@model EditAuthorModel

<div asp-validation-summary="All" class="text-danger text-center"></div>
<div class="row justify-content-center mx-0">
    <div class="col-lg-4 text-center">
        <hr />
        <form method="post">
            <div class="form-group">
                <input class="form-control" hidden asp-for="Id" />
            </div>
            <div class="form-group">
                <label asp-for="Name">Category</label>
                <input class="form-control" asp-for="Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Details">Category</label>
                <textarea class="form-control" rows="7" asp-for="Details">@Model.Details</textarea>
                <span asp-validation-for="Details" class="text-danger"></span>
            </div>
            <input type="submit" class="btn bg-color" value="Edit" />
        </form>
        <hr />
    </div>
</div>