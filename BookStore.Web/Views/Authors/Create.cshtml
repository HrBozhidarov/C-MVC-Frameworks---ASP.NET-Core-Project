@model CreateAuthorModel

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center mt-3 mb-5">Create Author</h1>
<div asp-validation-summary="All" class="text-danger text-center mx-auto"></div>
<div class="row justify-content-center mx-auto">
    <div class="col-lg-4 text-center">
        <hr />
        <form method="post">
            <div class="form-group">
                <label asp-for="Name">Author name</label>
                <input class="form-control" asp-for="Name" />
            </div>
            <div class="form-group">
                <label asp-for="Details">Details</label>
                <textarea class="form-control" rows="5" asp-for="Details"></textarea>
            </div>
            <input type="submit" class="btn bg-color" value="Create" />
        </form>
        <hr />
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}